@model List<FromScratch.Models.Report>

@{
    ViewData["Title"] = "Reports";
}

<h1>Reports</h1>

<a class="btn btn-success mb-3" asp-action="Create">Submit New Report</a>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Status</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var report in Model)
    {
        <tr>
            <td>@report.Id</td>
            <td>@report.Title</td>
            <td>@report.Status</td>
            <td>@report.Date.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>